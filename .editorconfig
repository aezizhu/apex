# EditorConfig - https://editorconfig.org
# Consistent coding styles across editors and IDEs

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust
[*.rs]
indent_size = 4
max_line_length = 100

# Python
[*.py]
indent_size = 4
max_line_length = 100

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# TOML
[*.toml]
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefile (requires tabs)
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# SQL
[*.sql]
indent_size = 4

# Proto
[*.proto]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# CSS
[*.css]
indent_size = 2

# Docker
[Dockerfile*]
indent_size = 4
