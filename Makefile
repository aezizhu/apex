	@echo "ğŸ“Š Running benchmarks..."
	cd src/backend/core && cargo bench

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Health & Monitoring
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

health:
	@echo "ğŸ¥ Health Check..."
	@echo ""
	@echo "API Server:"
	@curl -sf http://localhost:8080/health && echo " âœ… Healthy" || echo " âŒ Unhealthy"
	@echo ""
	@echo "PostgreSQL:"
	@docker-compose exec -T postgres pg_isready -U apex && echo " âœ… Ready" || echo " âŒ Not ready"
	@echo ""
	@echo "Redis:"
	@docker-compose exec -T redis redis-cli ping | grep -q PONG && echo " âœ… Ready" || echo " âŒ Not ready"
	@echo ""
	@echo "Jaeger:"
	@curl -sf http://localhost:16686 > /dev/null && echo " âœ… Ready" || echo " âŒ Not ready"
	@echo ""
	@echo "Prometheus:"
	@curl -sf http://localhost:9090/-/ready > /dev/null && echo " âœ… Ready" || echo " âŒ Not ready"
	@echo ""
	@echo "Grafana:"
	@curl -sf http://localhost:3001/api/health > /dev/null && echo " âœ… Ready" || echo " âŒ Not ready"

load-test:
	@echo "ğŸ”¥ Running load tests..."
	./scripts/load-test.sh

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Pre-commit Hooks
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

install-hooks:
	@echo "ğŸª Installing pre-commit hooks..."
	pip install pre-commit
	pre-commit install
	pre-commit install --hook-type commit-msg
	@echo "âœ… Hooks installed"

pre-commit:
	@echo "ğŸª Running pre-commit on all files..."
	pre-commit run --all-files

