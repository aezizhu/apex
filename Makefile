	@echo "  make docker-down  - Stop Docker Compose stack"
	@echo ""
	@echo "  make rust-build   - Build Rust backend"
	@echo "  make rust-test    - Test Rust backend"
	@echo "  make rust-watch   - Watch and rebuild Rust"
